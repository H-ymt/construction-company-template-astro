---
import Layout from "../layouts/Layout.astro";
import NewsList from "../components/NewsList.astro";
import Sheet from "../components/Sheet.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Section from "../components/Section.astro";
import ArrowLink from "../components/ArrowLink.astro";
import PrimaryButton from "../components/PrimaryButton.astro";
import WorksList from "../components/WorksList.astro";
import heroImage from "../assets/hero.webp";
import heroImageSm from "../assets/hero-sm.webp";
---

<Layout title="Homepage" commonjs="./js/common.js">
  <div class="grid place-items-center justify-center relative">
    <picture>
      <source
        srcset={heroImage.src}
        media="(min-width:640px)"
        width="1919"
        height="1078"
      />
      <img
        src={heroImageSm.src}
        alt=""
        width="640"
        height="650"
        class="object-cover h-[calc(100vh-72px)]"
        decoding="async"
        loading="eager"
      />
    </picture>

    <div class="absolute left-0">
      <h1
        class="py-5 px-6 sm:px-8 text-3xl sm:text-4xl text-white [text-shadow:_0_2px_0_rgb(0_0_0_/_40%)] font-bold bg-gray-900/50"
      >
        Build your dreams, create tomorrow
      </h1>
    </div>
  </div>
  <Sheet>
    <Section>
      <SectionTitle>About us</SectionTitle>
      <p class="pb-4">
        We are a professional construction partner that connects dreams and
        reality in the construction field. For over 20 years,<br />we have
        poured our passion and expertise into the realization of construction
        projects.
      </p>
      <div class="flex justify-end w-full">
        <ArrowLink href="/company">More</ArrowLink>
      </div>
    </Section>

    <Section>
      <SectionTitle>News</SectionTitle>
      <NewsList />

      <div class="text-center mt-8">
        <PrimaryButton href="./news">News List</PrimaryButton>
      </div>
    </Section>

    <Section>
      <SectionTitle>Works</SectionTitle>
      <WorksList />

      <div class="text-center mt-8">
        <PrimaryButton href="/works">See more</PrimaryButton>
      </div>
    </Section>
  </Sheet>
</Layout>
