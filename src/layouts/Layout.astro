---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
interface Props {
  title: string;
  commonjs: string;
}

const { title, commonjs } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-notoSans">
    <Header />
    <main>
      <slot />
    </main>

    <script src={commonjs} defer></script>
    <slot name="javascript" />
    <style is:global>
      :root {
      }

      html {
        color: #333;
        background: #fefefefb;
      }

      body {
      }

      p {
        display: flex;
        align-items: center;
      }
    </style>
  </body>
</html>
