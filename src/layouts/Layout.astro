---
import { ViewTransitions, fade } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  commonjs: string;
}

const { title, commonjs } = Astro.props;
---

<!doctype html>
<html lang="ja" transition:animate={fade({ duration: ".2s" })}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src={commonjs} defer></script>
    <slot name="javascript" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="swap" />
  </head>
  <body class="font-noto">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <style is:global>
      :root {
      }

      html {
        color: #24292f;
        background: #fefefefb;
      }

      body {
        min-height: 100vh;
      }

      p {
        display: flex;
        align-items: center;
        font-size: 15px;
        color: #57606a;
      }
    </style>
  </body>
</html>
