---
import PageTitle from "../../components/PageTitle.astro";
import Section from "../../components/Section.astro";
import Sheet from "../../components/Sheet.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="contact" commonjs="./js/common.js">
  <Sheet>
    <PageTitle>Contact us</PageTitle>

    <Section>
      <p class="flex justify-center text-lg">
        Please contact us using the form below.
      </p>

      <div class="w-full max-w-3xl mx-auto py-10">
        <iframe
          data-tally-src="https://tally.so/embed/npyQPE?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="800"
          title="Contact form"></iframe>
      </div>
    </Section>
  </Sheet>
</Layout>

<script src="https://tally.so/widgets/embed.js" slot="javascript">
  Tally.loadEmbeds();
</script>
